<page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">

    <page.actionBar>
        <action-bar title="Emotion Recognition" backgroundColor="#009688" color="#f1f1f1" android.icon="res://ic_test"/>
    </page.actionBar>

    <scroll-view>

        <stack-layout>
            <button text="Get Emotion" tap="getEmotion" />
            <image id="pic" src="~/images/gabe.jpg" height="200" stretch="aspectFit" />            
            <label text="{{ emotion }}" textWrap="true" />
        </stack-layout>
        
    </scroll-view>

</page>
