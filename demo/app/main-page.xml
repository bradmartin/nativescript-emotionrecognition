        <action-bar title="Emotion Recognition" backgroundColor="#009688" color="#f1f1f1" android.icon="res://ic_test"/>
    </page.actionBar>

    <scroll-view>

        <stack-layout>
            <button text="hi" tap="getEmotion" />
